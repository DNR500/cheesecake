{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "properties": {
        "cheesecake": {
            "type": "object",
            "properties": {
                "id": {
                    "type": "string"
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            }
        }
    },
    "required": [
        "cheesecake"
    ],
    "definitions": {
        "cssClasses": {
            "type": "array",
            "items": {
                "type": "string",
                "minLength": 1
            }
        },
        "label": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "label"
                    ]
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "text": {
                    "type": "string",
                    "minLength": 1
                }
            },
            "required": [
                "recipeName",
                "text"
            ]
        },
        "container": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "container"
                    ]
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ]
        },
        "verticallist": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "verticallist"
                    ]
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ]
        },
        "horizontallist": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "horizontallist"
                    ]
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "children": {
                    "$ref": "#/definitions/children"
                }
            },
            "required": [
                "recipeName",
                "children"
            ]
        },
        "imagebutton": {
            "type": "object",
            "properties": {
                "recipeName": {
                    "type": "string",
                    "enum": [
                        "imagebutton"
                    ]
                },
                "text": {
                    "type": "string",
                    "minLength": 1
                },
                "cssClasses": {
                    "$ref": "#/definitions/cssClasses"
                },
                "selected": {
                    "type": "boolean",
                    "enum": [
                        true,
                        false
                    ]
                },
                "source": {
                    "type": "object",
                    "properties": {
                        "active": {
                            "type": "string",
                            "minLength": 1
                        },
                        "inactive": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "required": [
                        "active",
                        "inactive"
                    ]
                },
                "actions": {
                    "$ref": "#/definitions/actions"
                }
            },
            "required": [
                "recipeName",
                "text",
                "source"
            ]
        },
        "children": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "$ref": "#/definitions/label"
                    },
                    {
                        "$ref": "#/definitions/container"
                    },
                    {
                        "$ref": "#/definitions/verticallist"
                    },
                    {
                        "$ref": "#/definitions/horizontallist"
                    },
                    {
                        "$ref": "#/definitions/imagebutton"
                    }
                ]
            }
        },
        "actions": {
            "type": "array",
            "items": {
                "type": "object",
                "oneOf": [
                    {
                        "$ref": "#/definitions/action_displayconfirmationdialog"
                    }
                ]
            }
        },
        "action_generic": {
            "type": "object",
            "properties": {
                "eventType": {
                    "type": "string",
                    "minLength": 1
                },
                "command": {
                    "type": "string",
                    "minLength": 1
                },
                "parameters": {
                    "type": "object"
                }
            },
            "required": [
                "eventType",
                "command"
            ]
        }

        "action_displayconfirmationdialog": {
            "type": "object",
            "properties": {
                "eventType": {
                    "type": "string",
                    "minLength": 1
                },
                "command": {
                    "type": "string",
                    "enum": ["displayconfirmationdialog"]
                },
                "parameters": {
                    "type": "object",
                    "properties": {
                        "url": {
                            "type": "string",
                            "minLength": 1
                        }
                    },
                    "required": [
                        "url"
                    ]
                }
            },
            "required": [
                "eventType",
                "command",
                "parameters"
            ]
        }
    }
}
